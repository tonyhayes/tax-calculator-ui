					</fieldset>
				    <fieldset>
					    <input class="tax-calculator-zip" type="text" pattern="[0-9]{5}" placeholder="Zip" />
				        <div class="input-msg">Message</div>
				    </fieldset>
				    <fieldset>
				        <label>Amount</label>
				        <input class="tax-calculator-amount" type="text" placeholder="$ .00">
				        <div class="input-msg">Message</div>
				    </fieldset>
				    <button type="button" class="primary tax-calculator-submit-btn">Calculate</button>
				</form>
			    <fieldset>
			        <div class="tax-calculator-totalRate bold">Tax (%) $</div>
			        <div class="tax-calculator-totalAmount bold">Total $</div>
			    </fieldset>
